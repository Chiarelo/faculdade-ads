programa
{
	
	funcao inicio()
	{
		inteiro i, soma
		i = 0
		soma = 0
		
		faca{
			se(i % 2 == 1 e i % 3 == 0){
				soma = soma + i
			}
			i++
		} enquanto(i <= 500)

		escreva("A soma dos números ímpares e divisíveis por 3 é: ", soma)
	}
}
